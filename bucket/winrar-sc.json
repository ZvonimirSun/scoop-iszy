{
    "homepage": "https://www.rarlab.com/",
    "description": "Powerful archive manager. It can backup your data and reduce the size of email attachments, decompress RAR, ZIP and other files downloaded from Internet and create new archives in RAR and ZIP file format.",
    "version": "5.70",
    "license": "Shareware",
    "architecture": {
        "64bit": {
            "url": "https://www.win-rar.com/fileadmin/winrar-versions/sc20190304/wrr/winrar-x64-570sc.exe"
        },
        "32bit": {
            "url": "https://www.win-rar.com/fileadmin/winrar-versions/sc20190304/wrr/wrar570sc.exe"
        }
    },
    "bin": [
        "rar.exe",
        "unrar.exe"
    ],
    "persist": "rarreg.key",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\rarreg.key\")) {",
        "    Write-Host 'Key does not exist' -f Yellow",
        "    New-Item \"$dir\\rarreg.key\" -Type File | Out-Null",
        "}"
    ],
    "installer": {
        "args": [
            "/s",
            "/d$dir"
        ]
    },
    "uninstaller": {
        "file": "Uninstall.exe",
        "args": "/s"
    }
}
